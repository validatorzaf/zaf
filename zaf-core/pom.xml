				<includes /> </testResource> -->
			<!-- <testResource> <directory>${project.basedir}/../testdata</directory> 
				<targetPath>${project.basedir}/target/test-classes/testdata</targetPath> 
				</testResource> -->
			<!-- <testResource> <directory>${project.basedir}/../rules-simple-dev/src</directory> 
				<targetPath>${project.basedir}/target/test-classes/rules-simple-dev</targetPath> 
				</testResource> -->
		</testResources>
	</build>

	<profiles>

		<profile>
			<id>javadoc</id>
			<build>
				<plugins>
  			        <plugin>
        			    <groupId>org.apache.maven.plugins</groupId>
        			    <artifactId>maven-javadoc-plugin</artifactId>
        			    <version>3.6.3</version>
        			    <configuration>
                            <skip>false</skip>
                            <excludePackageNames>cz.zaf.schema.*</excludePackageNames>
                            <sourcepath>${project.basedir}/src/main/java:${project.build.directory}/generated-sources/validacesip:${project.build.directory}/generated-sources/validace_v1</sourcepath>
        			    </configuration>
        			</plugin>			
  				</plugins>
			</build>
		</profile>
		<profile>
			<id>jacoco-report</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.jacoco</groupId>
						<artifactId>jacoco-maven-plugin</artifactId>
						<configuration>
							<excludes>org.drools.compiler.lang.*</excludes>
						</configuration>
						<executions>
							<execution>
								<id>default-prepare-agent</id>
								<goals>
									<goal>prepare-agent</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
