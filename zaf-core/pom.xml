	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>3.5.0</version>
				<executions>
					<execution>
						<id>add-gen-sources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${xjcDirectory}/validacexsd</source>
								<source>${project.build.directory}/generated-sources/validacesip</source>
								<source>${project.build.directory}/generated-sources/validace_v1</source>
								<source>${project.build.directory}/generated-sources/ead3</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.jvnet.jaxb</groupId>
				<artifactId>jaxb-maven-plugin</artifactId>
				<version>4.0.8</version>			
				<executions>
					<execution>
						<id>jaxb2-validacexsd</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<phase>generate-sources</phase>
						<configuration>
							<generateDirectory>${project.build.directory}/generated-sources/validacesip</generateDirectory>
							<schemaDirectory>src/main/resources/schema</schemaDirectory>
							<schemaIncludes>
								<include>validaceSIP.xsd</include>
							</schemaIncludes>
							<generatePackage>cz.zaf.schema.validacesip</generatePackage>							
						</configuration>
					</execution>
					<execution>
						<id>jaxb2-generate-validace-v1-xsd</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources/schema</schemaDirectory>
							<schemaIncludes>
								<include>validace_v1.xsd</include>
							</schemaIncludes>
							<generatePackage>cz.zaf.schema.validace_v1</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/validace_v1</generateDirectory>
						</configuration>
					</execution>
					<execution>
						<id>jaxb-generate-ead3-xsd</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources/schema</schemaDirectory>
							<schemaIncludes>
								<include>ead3.xsd</include>
							</schemaIncludes>
							<generatePackage>cz.zaf.schema.ead3</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/ead3</generateDirectory>
                            <bindingDirectory>${project.basedir}/src/main/resources/schema</bindingDirectory>
                            <bindingIncludes>
                                <include>ead3-bindings.xml</include>
							</bindingIncludes>
                            <plugins>
                                <plugin>
                                    <groupId>org.jvnet.jaxb</groupId>
                                    <artifactId>jaxb-plugins</artifactId>
                                    <version>4.0.8</version>
								</plugin>
							</plugins>

						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.1.2</version>
				<executions>
					<execution>
						<id>include-verapdf-app</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<artifactItems>
						<artifactItem>
							<groupId>org.verapdf.apps</groupId>
							<artifactId>greenfield-apps</artifactId>
							<version>1.24.3</version>
							<type>jar</type>
							<destFileName>greenfield-apps.jar</destFileName>
						</artifactItem>
					</artifactItems>
					<outputDirectory>${project.build.directory}/verapdf</outputDirectory>
					<overWriteReleases>false</overWriteReleases>
					<overWriteSnapshots>true</overWriteSnapshots>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.3.1</version>
				<configuration>
					<includeEmptyDirs>true</includeEmptyDirs>
				</configuration>
				<executions>
					<execution>
						<id>copy-test-resource</id>
						<!--<phase>package</phase> -->
						<phase>generate-sources</phase>
						<goals>
							<goal>testResources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.testOutputDirectory}/testdata</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/../testdata</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<release>17</release>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.4.0</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>cz.zaf.sipvalidator.CmdValidator</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.yaml</include>
					<include>zaf-core.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>target</directory>
				<includes>
					<include>verapdf/*.jar</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/*.yaml</exclude>
					<exclude>zaf-core.properties</exclude>
				</excludes>
			</resource>
		</resources>
